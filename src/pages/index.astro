---
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Ricky's Astro</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <main class="container fade-in-up">

      <section class="intro">
        <h1>Ricky <span class="highlight">Maaroef</span>,</h1>
        <h2>Vocational Student</h2>
        <p>
          A vocational student with a passion for Computer Science. Currently learning
          on modern web tools such as React and TailwindCSS.
        </p>
      </section>

  <section class="projects fade-in-up delay-1">
        <h2 class="section-title">Projects</h2>
    <div class="projects-grid">
      <div class="project-card">
        <h3>AshariQA</h3>
        <p>An inspired mock of IslamQA</p>
    </div>
    <div class="project-card">
      <h3>Coming Soon</h3>
      <p>Coming Soon</p>
    </div>
    <div class="project-card">
      <h3>Coming Soon</h3>
      <p>Coming Soon</p>
    </div>
    <div class="project-card">
      <h3>Coming Soon</h3>
      <p>Coming Soon</p>
    </div>
  </div>
  </section>

<section class="technologies-section">
  <h2 class="section-title">Technologies</h2>

  <div class="tech-group" id="backend-group">
    <h3 class="tech-category">Back-End</h3>
    <div class="tech-grid-2">
      <div class="tech-item"><img src="/icons/C++.svg" alt="C++"><span>C++</span></div>
      <div class="tech-item"><img src="/icons/Vite.svg" alt="Vite"><span>Vite</span></div>
    </div>
  </div>

  <div class="tech-group" id="frontend-group">
    <h3 class="tech-category">Front-End</h3>
    <div class="tech-grid-3">
      <div class="tech-item"><img src="/icons/React.svg" alt="React"><span>React</span></div>
      <div class="tech-item"><img src="/icons/JS.svg" alt="JavaScript"><span>JavaScript</span></div>
      <div class="tech-item"><img src="/icons/Tailwind.svg" alt="TailwindCSS"><span>TailwindCSS</span></div>
      <div class="tech-item"><img src="/icons/CSS.svg" alt="CSS"><span>CSS</span></div>
      <div class="tech-item"><img src="/icons/HTML.svg" alt="HTML"><span>HTML</span></div>
      <div class="tech-item"><img src="/icons/Astro.svg" alt="Astro"><span>Astro</span></div>
    </div>
  </div>

  <div class="tech-group" id="tools-group">
    <h3 class="tech-category">Tools</h3>
    <div class="tech-grid-3">
      <div class="tech-item"><img src="/icons/VSCode.svg" alt="VS Code"><span>VS Code</span></div>
      <div class="tech-item"><img src="/icons/GitHub.svg" alt="GitHub"><span>GitHub</span></div>
      <div class="tech-item"><img src="/icons/NPM.svg" alt="NPM"><span>NPM</span></div>
    </div>
  </div>
  </section>

    </main>

    <footer class="site-footer">
    <p>© 2025 Ricky Aldiansyah – No Rights Reserved.</p>
    </footer>

    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.tech-group').forEach(group => {
          const observer = new IntersectionObserver(
            (entries, observer) => {
              entries.forEach(entry => {
                if (entry.isIntersecting) {
                  entry.target.classList.add('visible');
                  observer.unobserve(entry.target);
                }
              });
            },
            { threshold: 0.2 }
          );
          observer.observe(group);
        });
      });
    </script>
  </body>
</html>
